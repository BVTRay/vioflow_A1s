/* pages/home/index.wxss */
.container {
  min-height: 100vh;
  padding: 40rpx;
  background-color: #18181b;
}

.user-card {
  display: flex;
  align-items: center;
  padding: 40rpx;
  background: linear-gradient(135deg, #27272a 0%, #3f3f46 100%);
  border-radius: 16rpx;
  margin-bottom: 40rpx;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #3b82f6;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 32rpx;
  overflow: hidden;
}

.user-avatar image {
  width: 100%;
  height: 100%;
}

.avatar-placeholder {
  font-size: 48rpx;
  color: #ffffff;
  font-weight: 600;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.user-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #ffffff;
}

.user-phone,
.user-email {
  font-size: 28rpx;
  color: #a1a1aa;
}

.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  color: #a1a1aa;
  font-size: 32rpx;
}

.menu-list {
  background-color: #27272a;
  border-radius: 16rpx;
  overflow: hidden;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 32rpx 40rpx;
  border-bottom: 1rpx solid #3f3f46;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background-color: #3f3f46;
}

.menu-icon {
  font-size: 40rpx;
  margin-right: 24rpx;
}

.menu-text {
  flex: 1;
  font-size: 32rpx;
  color: #ffffff;
}

.menu-arrow {
  font-size: 40rpx;
  color: #71717a;
}






