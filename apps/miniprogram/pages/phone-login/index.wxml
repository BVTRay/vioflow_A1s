<!--pages/phone-login/index.wxml-->
<view class="container">
  <view class="header">
    <text class="title">手机号登录</text>
    <text class="subtitle" wx:if="{{quickLogin}}">使用微信手机号快捷登录</text>
  </view>

  <view class="form-section">
    <view class="input-group">
      <input
        class="input"
        type="number"
        placeholder="请输入手机号"
        placeholder-class="input-placeholder"
        value="{{phone}}"
        bindinput="onPhoneInput"
        maxlength="11"
      />
    </view>

    <view class="input-group">
      <input
        class="input input-code"
        type="number"
        placeholder="请输入验证码"
        placeholder-class="input-placeholder"
        value="{{code}}"
        bindinput="onCodeInput"
        maxlength="6"
      />
      <button
        class="btn-code {{countdown > 0 || sending ? 'btn-code-disabled' : ''}}"
        bindtap="sendCode"
        disabled="{{countdown > 0 || sending}}"
      >
        {{countdown > 0 ? countdown + 's' : sending ? '发送中...' : '获取验证码'}}
      </button>
    </view>

    <button
      class="btn btn-primary {{loading ? 'btn-disabled' : ''}}"
      bindtap="phoneLogin"
      disabled="{{loading}}"
    >
      {{loading ? '登录中...' : '登录'}}
    </button>
  </view>
</view>






