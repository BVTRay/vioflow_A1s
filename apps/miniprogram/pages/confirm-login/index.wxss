/* pages/confirm-login/index.wxss */
.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx;
}

.content {
  width: 100%;
  background: white;
  border-radius: 32rpx;
  padding: 60rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 80rpx;
}

.logo-emoji {
  font-size: 80rpx;
}

.title {
  font-size: 48rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.tips {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.tips text {
  font-size: 28rpx;
  color: #666;
  line-height: 48rpx;
}

.button-group {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.confirm-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
}

.confirm-btn:disabled {
  opacity: 0.6;
}

.cancel-btn {
  width: 100%;
  height: 96rpx;
  background: transparent;
  color: #666;
  border: 2rpx solid #e5e5e5;
  border-radius: 48rpx;
  font-size: 32rpx;
  position: relative;
  z-index: 1;
}

.cancel-btn::after {
  border: none;
}

.cancel-btn:disabled {
  opacity: 0.6;
}

.security-tips {
  margin-top: 40rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.security-icon {
  font-size: 28rpx;
}

.security-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

