/**app.wxss**/
page {
  background-color: #18181b;
  color: #ffffff;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
}

.container {
  padding: 20rpx;
  min-height: 100vh;
}

/* 通用按钮样式 */
.btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 8rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
}

.btn-primary {
  background-color: #3b82f6;
  color: #ffffff;
}

.btn-primary:active {
  background-color: #2563eb;
}

.btn-secondary {
  background-color: #27272a;
  color: #ffffff;
  border: 1rpx solid #3f3f46;
}

.btn-secondary:active {
  background-color: #3f3f46;
}

.btn-disabled {
  background-color: #27272a;
  color: #71717a;
  opacity: 0.5;
}

/* 输入框样式 */
.input {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  background-color: #27272a;
  border: 1rpx solid #3f3f46;
  border-radius: 8rpx;
  color: #ffffff;
  font-size: 32rpx;
}

.input:focus {
  border-color: #3b82f6;
}

/* 文本样式 */
.text-primary {
  color: #ffffff;
}

.text-secondary {
  color: #a1a1aa;
}

.text-muted {
  color: #71717a;
}

.text-error {
  color: #ef4444;
}

.text-success {
  color: #10b981;
}

/* 间距 */
.mt-small {
  margin-top: 16rpx;
}

.mt-medium {
  margin-top: 32rpx;
}

.mt-large {
  margin-top: 48rpx;
}

.mb-small {
  margin-bottom: 16rpx;
}

.mb-medium {
  margin-bottom: 32rpx;
}

.mb-large {
  margin-bottom: 48rpx;
}






